import os

def check_files(directory):
    print(f"جاري فحص المجلد: {directory}")
    files = os.listdir(directory)
    for file in files:
        if file.endswith(".exe") or file.endswith(".sh"):
            print(f"⚠️ تنبيه: تم العثور على ملف تنفيذي مشبوه: {file}")
        else:
            print(f"✅ الملف آمن: {file}")

# فحص مجلد التحميلات الذي عملنا عليه
check_files("/sdcard/Download")